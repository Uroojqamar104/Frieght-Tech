@{
    Layout = null;
}

<!doctype html>
<html lang="en" class="fullscreen-bg">
<head>
    @{
        string baseUrl = Request.Url.AbsoluteUri.ToLowerInvariant().Contains("localhost") ? "" : "/app";
    }
    <title>Login | Freight Tech</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->

    <link rel="stylesheet" href="@baseUrl/Content/theme/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="@baseUrl/Content/theme/vendor/font-awesome/css/font-awesome.min.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="@baseUrl/Content/theme/css/main.css">
    <link rel="stylesheet" href="@baseUrl/Content/theme/css/demo.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="assets/img/favicon.png">
</head>
<body>
    <script>
        //var appBaseUrl = '';
        //var apiBaseUrl = 'http://localhost:54198/';
        var isLocalHost = window.location.href.indexOf('localhost') != -1;
        var FreightTechKeys = {
            appBaseUrl: isLocalHost ? '@FreightTech.App.Helpers.AppKeys.LocalAppDomain' : '@FreightTech.App.Helpers.AppKeys.AppDomain',
            apiBaseUrl: isLocalHost ? '@FreightTech.App.Helpers.AppKeys.LocalApiDomain' : '@FreightTech.App.Helpers.AppKeys.ApiDomain',
            isLocal: isLocalHost,
            baseUrl: '@baseUrl'
        };

        //window.FreightTechKeys = FreightTechKeys;
    </script>
    <!-- WRAPPER -->
    <div id="div-main">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box">
                    <div class="content">
                        <div class="header">
                            <div class="logo text-center lead">Freight Tech</div>
                            <p class="lead">Login to your account</p>
                        </div>
                        <form class="form-auth-small">
                            <div class="form-group">
                                <label for="signin-email" class="control-label sr-only">Email</label>
                                <input type="email" class="form-control" id="signin-email" placeholder="Email" data-bind="value: email">
                            </div>
                            <div class="form-group">
                                <label for="signin-password" class="control-label sr-only">Password</label>
                                <input type="password" class="form-control" id="signin-password" placeholder="Password" data-bind="value: password">
                            </div>
                            <div class="form-group clearfix">
                                @*<label class="fancy-checkbox element-left">
                                        <input type="checkbox">
                                        <span>Remember me</span>
                                    </label>*@
                                @*<span class="helper-text element-right">Don't have an account? <a href="javascript:void(0);">Register</a></span>*@
                            </div>
                            <button class="btn btn-primary btn-lg btn-block" data-bind="click: login, attr: { 'disabled': isProcessing() }">LOGIN</button>
                            @*<div class="bottom">
                                <span class="helper-text"><i class="fa fa-lock"></i> <a href="javascript:void(0);">Forgot password?</a></span>
                            </div>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>
</html>

<script type="text/javascript" src="@baseUrl/Scripts/libs/requirejs/require.js"
        data-main="@baseUrl/Scripts/app/modules/login.js"></script>

