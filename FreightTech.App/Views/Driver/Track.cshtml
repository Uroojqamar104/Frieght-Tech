@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string baseUrl = Request.Url.AbsoluteUri.ToLowerInvariant().Contains("localhost") ? "" : "/app";
}

<style>
    .map {
        height: 400px;
        width: 97%;
        margin-left: 2%;
    }
</style>


<div id="main-content">

    <input type="hidden" id="driverId" value="@ViewBag.DriverId" />
    <div id="div-main">
        <div class="container-fluid">
            <h1 class="sr-only">Track Driver</h1>
            <div class="dashboard-section">
                <div class="row">
                    <div class="col-md-3 col-sm-6">
                        <strong> <div data-bind="text: 'Name: ' + driverName()"></div></strong>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <button data-bind="click: startTracking, visible: driverName() != ''">Start Tracking</button>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <div class="map">
                            <div id="map" class="map"></div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


<script type="text/javascript" src="@baseUrl/Scripts/libs/requirejs/require.js"
        data-main="@baseUrl/Scripts/app/modules/track-driver.js"></script>

<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBFiB41Vxt09EgQKkUj35h2DWq30SZ8vxM">
</script>